{
    "name": "ilib-loctool-pendo-md-test",
    "id": "ilib-loctool-pendo-md-test",
    "description": "translate strings exported from Pendo",
    "projectType": "custom",
    "sourceLocale": "en",
    "includes": ["l10n/xliff/guides/*.xliff"],
    "excludes": [],
    "settings": {
        "xliffsDir": "translations",
        "locales": ["pl-PL"],
        "localeMap": {
            "pl-PL": "pl"
        },
        "pendo": {
            "mappings": {
                "l10n/xliff/guides/*.xliff": {
                    "template": "[dir]/[basename]_[locale].xliff"
                }
            }
        }
    },
    "plugins": ["ilib-loctool-pendo-md"]
}
